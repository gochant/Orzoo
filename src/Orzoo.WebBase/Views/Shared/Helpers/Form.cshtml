@functions
{

    public static string GetDataFormat(ModelMetadata metadata)
    {
        var dataFormat = string.Empty;


        if (!string.IsNullOrEmpty(metadata.DisplayFormatString))
        {
            dataFormat = metadata.DisplayFormatString.Replace("{", "").Replace("}", "").Replace("0:", "");
        }
        else
        {
            if (metadata.DataTypeName == "Currency" || metadata.ModelType.Name == "Decimal")
            {
                dataFormat = "C";
            }
        }
        return dataFormat;
    }

}

