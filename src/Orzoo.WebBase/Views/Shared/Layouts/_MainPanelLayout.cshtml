<div class="panel panel-transparent panel-underline no-border flexbox">
    <div class="panel-heading clearfix">
        <h3 class="panel-title pull-left">
            @RenderSection("Title")
        </h3>
    </div>
    <div class="panel-toolbar panel-toolbar-sm">
        @RenderSection("Toolbar", false)
    </div>
    <div class="panel-body no-padding grow inline">
        @RenderBody()
    </div>
    <div class="panel-footer no-padding">
        @RenderSection("Footer", false)
    </div>
</div>
@RenderSection("Tpl", false)